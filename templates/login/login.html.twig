{% extends 'base.html.twig' %}

{% block title %}Veille SEO Cleatis - Connexion{% endblock %}

{% block menu %}{% endblock %}

{% block body %}
    <div class="login-container">
        <form class="login-form" action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a></div>
            {% endif %}
            <h2 class="h3 mb-3 font-weight-normal">Connexion</h2>
            <label for="username">Nom d'utilisateur</label>
            <input class="form-control" type="text" id="username" name="_username"  value="{{ last_username }}">
            <label for="password">Mot de passe</label>
            <input class="form-control" type="password" id="password" name="_password">
            <small><a href="{{path('app_forgot_password_request')}}">Mot de passe oublié ?</a></small> 
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
        </form>
    </div>
{% endblock %}

{% block footer %}{% endblock %}