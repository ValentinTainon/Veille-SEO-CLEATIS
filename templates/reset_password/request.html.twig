{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block menu %}{% endblock %}

{% block body %}
    <div class="reset-password-container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h2>Réinitialisez votre mot de passe</h2>
        {{ form_start(requestForm, { 'attr' : { 'class': 'reset-password-form' } }) }}
            <p>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
            {{ form_row(requestForm.email) }}
            <button class="submit-btn">Envoyer</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}

{% block footer %}{% endblock %}